---

<RestaurantLayout
  title="Fast Food"
  description="Fast food"
  textWhite={true}
  backgroundColor="bg-zinc-950"
>
  <div class="min-h-screen bg-zinc-950 bg-[url('/placeholder.svg?height=100&width=100')] bg-repeat p-4 md:p-8">
    <div class="mx-auto max-w-3xl">
      <div class="relative">
        <Image
          src={hoja}
          alt=""
          width={200}
          height={100}
          class="absolute right-[50px] -top-10 rotate-[70deg] opacity-80 blur-[2px]"
        />
      </div>

      <div class="relative z-10 p-6">
        <div class="mb-16 text-center">
          <h1 class="text-6xl font-black tracking-wider text-white [text-shadow:_2px_2px_4px_rgb(0_0_0_/_80%)]">
            FAST FOOD
            <span class="mt-2 block text-7xl">MENU</span>
          </h1>
        </div>

        {
          Object.values(menuItems).map((section) => (
            <div class="mb-16">
              <div class="mb-8 flex items-center justify-between">
                <h2 class="text-4xl font-black text-orange-500">{section.title}</h2>
              </div>
              
              <div class="space-y-6">
                {section.items.map((item) => (
                  <div class="flex items-center text-white">
                    <span class="text-2xl font-bold">{item.name}</span>
                    <div class="mx-4 flex-1 border-b-2 border-dashed border-gray-600" />
                    <span class="text-2xl font-bold text-orange-500">${item.price}</span>
                  </div>
                ))}
              </div>

              {section.image && (
                <div class="relative mb-8">
                  <div class="relative flex justify-center">
                    <Image
                      src={section.image}
                      alt={`${section.title} featured dish`}
                      width={400}
                      class="w-full object-cover rounded-lg shadow-lg"
                    />
                  </div>
                </div>
              )}


            </div>
          ))
        }
      </div>
    </div>
  </div>
</RestaurantLayout>