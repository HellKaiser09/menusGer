  name: string;
  price: string;
}

interface MenuSection {
  title: string;
  image?: any;
  items: MenuItem[];
}

const menuItems: Record<string, MenuSection> = {
  hamburgers: {
    title: "HAMBURGER",
    image: hamburguer,
    items: [
      { name: "Classic Cheeseburger", price: "16.00" },
      { name: "Bacon Burger", price: "12.50" },
      { name: "Veggie Burger", price: "14.00" },
      { name: "Chicken Burger", price: "13.50" },
      { name: "Double Cheeseburger", price: "18.00" },
      { name: "Mushroom Swiss Burger", price: "15.50" },
      { name: "BBQ Burger", price: "15.00" },
      { name: "Spicy Jalape√±o Burger", price: "14.50" }
    ]
  },
  burritos: {
    title: "BURRITO",
    image: burrito,
    items: [
      { name: "Beef Burrito", price: "14.00" },
      { name: "Chicken Burrito", price: "13.50" },
      { name: "Carnitas Burrito", price: "15.00" },
      { name: "Shrimp Burrito", price: "13.50" },
      { name: "Veggie Burrito", price: "12.50" },
      { name: "Breakfast Burrito", price: "11.00" },
      { name: "California Burrito", price: "15.50" },
      { name: "Fish Burrito", price: "14.50" }
    ]
  },
  pizzas: {
    title: "PIZZA",
    image: pizza,
    items: [
      { name: "Margherita Pizza", price: "16.00" },
      { name: "Pepperoni Pizza", price: "17.50" },
      { name: "BBQ Chicken Pizza", price: "18.00" },
      { name: "Veggie Supreme Pizza", price: "17.00" },
      { name: "Meat Lovers Pizza", price: "19.50" },
      { name: "Hawaiian Pizza", price: "17.00" },
      { name: "Buffalo Chicken Pizza", price: "18.50" },
      { name: "Four Cheese Pizza", price: "16.50" }
    ]
  },
