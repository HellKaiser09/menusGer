---
import Gallery from "../../../components/Gallery.astro";
import RestaurantLayout from "../../../layouts/RestaurantLayout.astro";

import vaso from "./media/vaso.jpg";
import menu from "./media/menu.jpg";
import cafetera from "./media/cafetera.jpg";
import pared from "./media/pared.jpg";
import latte from "./media/latte.jpg";
import helado from "./media/helado.jpg";
import logo from "./media/logo.png";
import { Image } from "astro:assets";
import icon from "./media/icon.png";


const galleryImages = [
    {
        src: menu,
        alt: "Menu",
        title: "Menu",
    },
    {
        src: icon,
        alt: "Instagram",
        title: "Instagram",
    },
    { src: cafetera, alt: "Cafetera", title: "Cafetera" },
    {
        src: vaso,
        alt: "Drink",
        title: "Drink",
    },
    {
        src: pared,
        alt: "Pared",
        title: "Pared",
    },
    {
        src: latte,
        alt: "Latte",
        title: "Latte",
    },
    {
        src: helado,
        alt: "Helado",
        title: "Helado",
    }
];

const restaurantData = {
    name: "FOSFORO CAFÉ",
    description: "Tu nueva cafetería favorita en barrio antiguo",
};

const schemaEnrichment = {
    address: {
        streetAddress: "Calle Diego de Montemayor #751-A",
        addressLocality: "Monterrey, N.L.",
        postalCode: "75000",
        addressCountry: "MX",
    },
    telephone: "+52 81 3269 5700",
    email: "info@bysmax.com",
    priceRange: "$$",
    servesCuisine: [
        "Tapatía",
        "Asado",
        "Flautas",
        "Sopes",
        "Pozole",
        "Tostadas",
    ],
    openingHours: "Viernes-Domingo 12:00-23:00",
    acceptsReservations: true,
    paymentAccepted: ["Cash", "Credit Card"],
    currenciesAccepted: ["MXN", "USD"],
    aggregateRating: {
        ratingValue: 4.5,
        reviewCount: 123,
    },
};
---

<RestaurantLayout
    title={restaurantData.name}
    description={restaurantData.description}
    schemaEnrichment={schemaEnrichment}
    backgroundColor="bg-[#faf7f2]"
    image={menu.src}
    favicon={icon.src}
>
    <div class="bg-[#faf7f2]">
        <div class="max-w-2xl mx-auto p-8">
            {/* Logo and Brand */}
            <div class="text-center mb-8">
                <div class="flex items-center justify-center mb-2">
                    <Image src={logo} alt="Logo FOSFORO Cafe" />
                </div>
                <p class={`text-xl text-[#AE1836]`}>{restaurantData.name} {restaurantData.description}</p>
            </div>

            {/* Menu Section - CAFÉ */}
            <div class="mb-8">
                <h2
                    class={`text-2xl text-[#AE1836] border-b-2 border-[#AE1836] mb-4`}
                >
                    CAFÉ
                </h2>
                <div class="space-y-3">
                    {
                        [
                            {
                                name: "AMERICANO",
                                description:
                                    "Doble shot de espresso, agua; leche y azúcar al gusto",
                                priceHot: "$50",
                                priceCold: "$55",
                            },
                            {
                                name: "CAPPUCCINO",
                                description:
                                    "Espresso + una delicada capa de leche espumada",
                                priceHot: "$60",
                                priceCold: "-",
                            },
                            {
                                name: "FLAT WHITE",
                                description:
                                    "Doble shot de espresso + leche vaporizada. Bebida 8oz.",
                                priceHot: "$60",
                                priceCold: "$65",
                            },
                            {
                                name: "MOKA",
                                description:
                                    "Espresso + leche espumada + chocolate + canela + cacao",
                                priceHot: "$65",
                                priceCold: "$70",
                            },
                            {
                                name: "DALGONA",
                                description:
                                    "Bebida a base de crema de café y azúcar + leche espumada",
                                priceHot: "-",
                                priceCold: "$60",
                            },
                            {
                                name: "AFFOGATTO",
                                description:
                                    "Una bola de helado + espresso + galleta",
                                priceHot: "-",
                                priceCold: "$70",
                            },
                            {
                                name: "ESPRESSO TONIC",
                                description:
                                    "Shot de espresso + agua tónica + twist cítrico. Bebida 8oz.",
                                priceHot: "-",
                                priceCold: "$70",
                            },
                            {
                                name: "LATTE",
                                description:
                                    "Espresso + leche vaporizada + sabor de temporada opcional",
                                priceHot: "$70",
                                priceCold: "$75",
                            },
                            {
                                name: "CARAMEL MACCIATO",
                                description:
                                    "Espresso + leche espumada + caramelo + vainilla",
                                priceHot: "$75",
                                priceCold: "$80",
                            },
                        ].map((item) => (
                            <div class="flex justify-between items-start">
                                <div class="flex-1">
                                    <h3 class="font-semibold">{item.name}</h3>
                                    <p class="text-sm text-gray-600">
                                        {item.description}
                                    </p>
                                </div>
                                <div class="flex gap-4 ml-4 text-right justify-end min-w-[100px]">
                                    <span>{item.priceHot}</span>
                                    <span>{item.priceCold}</span>
                                </div>
                            </div>
                        ))
                    }
                </div>
            </div>

            {/* Menu Section - NO CAFÉ */}
            <div>
                <h2
                    class={`text-2xl text-[#AE1836] border-b-2 border-[#AE1836] mb-4`}
                >
                    NO CAFÉ
                </h2>
                <div class="space-y-3">
                    {
                        [
                            {
                                name: "CHOCOLATE",
                                description:
                                    "Chocolate + leche espumada + vainilla + canela + cacao",
                                priceHot: "$65",
                                priceCold: "$70",
                            },
                            {
                                name: "CHAI",
                                description:
                                    "Té a base de una mezcla de especias + leche espumada",
                                priceHot: "$70",
                                priceCold: "$75",
                            },
                            {
                                name: "MATCHA",
                                description:
                                    "Té verde + leche espumada + vainilla",
                                priceHot: "$70",
                                priceCold: "$75",
                            },
                            {
                                name: "LIMONADA",
                                description: "¡Limonada!",
                                priceHot: "-",
                                priceCold: "$50",
                            },
                            {
                                name: "ACQUA SODA",
                                description:
                                    "Bebida a base de fruta natural + agua mineral + tónica",
                                priceHot: "-",
                                priceCold: "$70",
                            },
                        ].map((item) => (
                            <div class="flex justify-between items-start">
                                <div class="flex-1">
                                    <h3 class="font-semibold">{item.name}</h3>
                                    <p class="text-sm text-gray-600">
                                        {item.description}
                                    </p>
                                </div>
                                <div class="flex gap-4 ml-4 text-right justify-end min-w-[100px]">
                                    <span>{item.priceHot}</span>
                                    <span>{item.priceCold}</span>
                                </div>
                            </div>
                        ))
                    }
                </div>
            </div>
            <div>
                <div class="text-center max-w-5xl mx-auto">
                    {/* Image gallery */}
                    <h2
                        class="text-5xl py-6 text-[#AE1836] font-serif mb-2 font-bold"
                    >
                        Galeria
                    </h2>
                    <Gallery
                        images={galleryImages}
                    />
                </div>
            </div>
            {/* Footer */}
            <div class="mt-8 text-center text-sm text-gray-600">
                <p>Calle Diego de Montemayor #751-A</p>
                <p>Barrio Antiguo, Monterrey.</p>
                <a href="https://www.instagram.com/fosforocafe/" class="mt-2"
                    >@FOSFOROCAFE</a
                >
            </div>
        </div>
    </div>
</RestaurantLayout>
