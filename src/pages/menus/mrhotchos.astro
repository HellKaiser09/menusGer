---
import Layout from '../../layouts/Menus.astro';
const menuPackages = [
  {
    name: 'PAQUETE EMPACHES',
    items: ['2 HOTCHOS ARTESANALES', '1 ORDEN DE PAPAS', '2 REFRESCOS'],
    price: 160,
  },
  {
    name: 'PA LA BANDA',
    items: ['4 HOTCHOS ARTESANALES', '2 ORDENES DE PAPAS', '4 REFRESCOS'],
    price: 300,
  },
  {
    name: 'PAQUETE LLENES',
    items: ['2 HOTCHOS TRADICIONALES', '1 ORDEN DE PAPAS', '1 REFRESCO'],
    price: 110,
  },
  {
    name: 'PA COMPARTIR',
    items: ['4 HOTCHOS TRADICIONALES', '2 ORDENES DE PAPAS', '2 REFRESCOS'],
    price: 220,
  },
];
---

<Layout>
  <div class='bg-[#b41416]'>
    <div class='container mx-auto px-6'>
      <h1 class='text-3xl font-bold text-center py-6  text-white'>
        Hot Dog Menu Packages
      </h1>
      <div class='grid grid-cols-2 gap-6 p-6'>
        {
          menuPackages.map((pack) => (
            <div class='bg-white rounded-2xl shadow p-6'>
              <h2 class='text-xl font-semibold mb-4 text-red-600'>
                {pack.name}
              </h2>
              <ul class='mb-4'>
                {pack.items.map((item) => (
                  <li>{item}</li>
                ))}
              </ul>
              <p class='text-2xl font-bold text-red-600'>${pack.price}</p>
            </div>
          ))
        }
      </div>
    </div>
  </div>
</Layout>
