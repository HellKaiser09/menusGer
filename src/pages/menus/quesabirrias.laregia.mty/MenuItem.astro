---
interface Props {
  title: string;
  price?: string;
  prices?: Array<{size?: string; value: string}>;
  description?: string;
  note?: string;
}

const { title, price, prices, description, note } = Astro.props;
---

<div class="flex justify-between gap-4 mb-6">
  <div class="flex-1">
    <h3 class="text-2xl font-bold font-oswald text-[#f61519] uppercase">{title}</h3>
    {description && <p class="text-sm text-gray-700 mt-1">{description}</p>}
    {note && <p class="text-xs italic text-gray-500 mt-1">{note}</p>}
  </div>
  <div class="text-right whitespace-nowrap">
    {prices ? (
      prices.map(p => (
        <div>
          {p.size && <span class="text-sm mr-2">{p.size}</span>}
          <span class="text-xl font-black">${p.value}</span>
        </div>
      ))
    ) : (
      <span class="text-xl font-black">${price}</span>
    )}
  </div>
</div>
