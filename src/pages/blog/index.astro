---
export const prerender = true;

import BaseHead from '../../components/BaseHead.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../../consts';
import { getCollection } from 'astro:content';
import FormattedDate from '../../components/FormattedDate.astro';
import RestaurantLayout from '../../layouts/RestaurantLayout.astro';
import { ArrowRight } from "lucide-react";

const posts = (await getCollection('blog')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);
---

<RestaurantLayout
title="Blog Gastronómico"
description="Descubre los mejores restaurantes, reseñas y experiencias culinarias"
>
	<main>
		<!-- Hero Section -->
		<section class="relative overflow-hidden">
			<!-- Background Image with Overlay -->
			<div class="absolute inset-0 bg-cover bg-center" style="background-image: url('/espadas.webp'); filter: brightness(0.4);"></div>
			
			<!-- Content -->
			<div class="relative z-10 max-w-6xl mx-auto px-4 py-24 md:py-32 text-center">
				<span class="inline-block bg-accent text-white px-4 py-1 rounded-full text-sm font-medium mb-6 animate-pulse">Experiencias Gastronómicas</span>
				<h1 class="text-4xl md:text-5xl lg:text-6xl font-bold mb-6 text-white">Blog Gastronómico</h1>
				<p class="text-xl md:text-2xl text-white/90 max-w-3xl mx-auto mb-8">Descubre los mejores restaurantes, reseñas y experiencias culinarias</p>
				<div class="flex flex-wrap justify-center gap-4 mt-8">
					<a href="#posts" class="bg-white text-gray-900 hover:bg-gray-100 px-6 py-3 rounded-full font-medium transition-all duration-300 flex items-center">
						Explorar Artículos <ArrowRight className="ml-2 w-5 h-5" />
					</a>
					<a href="/menus" class="bg-transparent border-2 border-white text-white hover:bg-white/10 px-6 py-3 rounded-full font-medium transition-all duration-300">
						Ver Menús Digitales
					</a>
				</div>
			</div>
			
			<!-- Wave Divider -->
			<div class="absolute bottom-0 left-0 right-0 overflow-hidden">
				<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1200 120" preserveAspectRatio="none" class="relative block w-full h-[60px] rotate-180">
					<path d="M0,0V46.29c47.79,22.2,103.59,32.17,158,28,70.36-5.37,136.33-33.31,206.8-37.5C438.64,32.43,512.34,53.67,583,72.05c69.27,18,138.3,24.88,209.4,13.08,36.15-6,69.85-17.84,104.45-29.34C989.49,25,1113-14.29,1200,52.47V0Z" opacity=".25" fill="white"></path>
					<path d="M0,0V15.81C13,36.92,27.64,56.86,47.69,72.05,99.41,111.27,165,111,224.58,91.58c31.15-10.15,60.09-26.07,89.67-39.8,40.92-19,84.73-46,130.83-49.67,36.26-2.85,70.9,9.42,98.6,31.56,31.77,25.39,62.32,62,103.63,73,40.44,10.79,81.35-6.69,119.13-24.28s75.16-39,116.92-43.05c59.73-5.85,113.28,22.88,168.9,38.84,30.2,8.66,59,6.17,87.09-7.5,22.43-10.89,48-26.93,60.65-49.24V0Z" opacity=".5" fill="white"></path>
					<path d="M0,0V5.63C149.93,59,314.09,71.32,475.83,42.57c43-7.64,84.23-20.12,127.61-26.46,59-8.63,112.48,12.24,165.56,35.4C827.93,77.22,886,95.24,951.2,90c86.53-7,172.46-45.71,248.8-84.81V0Z" fill="white"></path>
				</svg>
			</div>
		</section>

		<!-- Categories Section -->
		<section class="max-w-6xl mx-auto px-4 py-16" id="posts">
			<div class="text-center mb-12">
				<h2 class="text-3xl md:text-4xl font-bold mb-4">Categorías Destacadas</h2>
				<p class="text-gray-600 max-w-2xl mx-auto">Explora nuestras categorías gastronómicas y descubre contenido que te encantará</p>
				<div class="w-16 h-1 bg-accent mx-auto mt-6 rounded-full"></div>
			</div>
			
			<div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-16">
				<a href="#" class="group relative overflow-hidden rounded-xl h-64 flex items-end">
					<div class="absolute inset-0 bg-cover bg-center transition-transform duration-500 group-hover:scale-110" style="background-image: url('/blog-placeholder-3.jpg');"></div>
					<div class="absolute inset-0 bg-gradient-to-t from-black/80 to-transparent"></div>
					<div class="relative p-6 z-10">
						<h3 class="text-xl font-bold text-white mb-2">Restaurantes</h3>
						<p class="text-white/80 text-sm">Descubre los mejores lugares para comer</p>
					</div>
				</a>
				<a href="#" class="group relative overflow-hidden rounded-xl h-64 flex items-end">
					<div class="absolute inset-0 bg-cover bg-center transition-transform duration-500 group-hover:scale-110" style="background-image: url('/blog-placeholder-1.jpg');"></div>
					<div class="absolute inset-0 bg-gradient-to-t from-black/80 to-transparent"></div>
					<div class="relative p-6 z-10">
						<h3 class="text-xl font-bold text-white mb-2">Recetas</h3>
						<p class="text-white/80 text-sm">Aprende a preparar platos deliciosos</p>
					</div>
				</a>
				<a href="#" class="group relative overflow-hidden rounded-xl h-64 flex items-end">
					<div class="absolute inset-0 bg-cover bg-center transition-transform duration-500 group-hover:scale-110" style="background-image: url('/blog-placeholder-5.jpg');"></div>
					<div class="absolute inset-0 bg-gradient-to-t from-black/80 to-transparent"></div>
					<div class="relative p-6 z-10">
						<h3 class="text-xl font-bold text-white mb-2">Experiencias</h3>
						<p class="text-white/80 text-sm">Vive la gastronomía de forma única</p>
					</div>
				</a>
			</div>

			<!-- Featured Posts -->
			<div class="mb-12">
				<div class="flex justify-between items-center mb-8">
					<h2 class="text-2xl md:text-3xl font-bold">Artículos Recientes</h2>
					<a href="#" class="text-accent hover:underline flex items-center font-medium">
						Ver todos <ArrowRight className="ml-2 w-4 h-4" />
					</a>
				</div>

				<ul class="grid grid-cols-1 md:grid-cols-2 gap-8 lg:gap-12 list-none p-0">
					{
						posts.map((post, index) => (
							<li class={`${index === 0 ? "md:col-span-2" : ""} group`}>
								<a href={`/blog/${post.slug}/`} class="block no-underline overflow-hidden rounded-xl bg-white shadow-lg hover:shadow-xl transition-all duration-300 h-full">
									<div class="relative overflow-hidden">
										<img 
											width={720} 
											height={360} 
											src={post.data.heroImage} 
											alt={post.data.title} 
											class="w-full h-64 md:h-80 object-cover transition-transform duration-500 group-hover:scale-105"
										/>
										<div class="absolute bottom-0 left-0 right-0 bg-gradient-to-t from-black/70 to-transparent p-6 pt-12">
											<p class="text-white/90 text-sm font-medium mb-2 inline-block bg-black/30 px-3 py-1 rounded-full">
												<FormattedDate date={post.data.pubDate} />
											</p>
										</div>
									</div>
									<div class="p-6 flex flex-col h-[calc(100%-320px)]">
										<h2 class={`${index === 0 ? "text-3xl md:text-4xl" : "text-2xl"} font-bold text-gray-800 mb-3 line-clamp-2`}>
											{post.data.title}
										</h2>
										<p class="text-gray-600 mb-4 line-clamp-3 flex-grow">{post.data.description}</p>
										<div class="flex items-center text-accent font-medium mt-auto">
											Leer más <ArrowRight className="ml-2 w-4 h-4 transition-transform group-hover:translate-x-1" />
										</div>
									</div>
								</a>
							</li>
						))
					}
				</ul>
			</div>
		</section>

		<!-- Newsletter Section -->
		<section class="bg-gray-100 py-16">
			<div class="max-w-6xl mx-auto px-4">
				<div class="bg-white rounded-2xl shadow-xl overflow-hidden">
					<div class="grid md:grid-cols-2 gap-0">
						<div class="p-8 md:p-12 lg:p-16 flex flex-col justify-center">
							<h2 class="text-3xl font-bold mb-4">Suscríbete a nuestro newsletter</h2>
							<p class="text-gray-600 mb-6">Recibe las últimas actualizaciones sobre restaurantes, recetas y experiencias gastronómicas directamente en tu correo.</p>
							
							<form class="flex flex-col sm:flex-row gap-3">
								<input 
									type="email" 
									placeholder="Tu correo electrónico" 
									class="flex-grow px-4 py-3 rounded-lg border border-gray-300 focus:outline-none focus:ring-2 focus:ring-accent focus:border-transparent"
									required
								/>
								<button 
									type="submit" 
									class="bg-accent hover:bg-accent/90 text-white font-medium px-6 py-3 rounded-lg transition-colors duration-300"
								>
									Suscribirse
								</button>
							</form>
							
							<p class="text-sm text-gray-500 mt-4">No enviamos spam. Puedes darte de baja en cualquier momento.</p>
						</div>
						<div class="relative h-64 md:h-auto">
							<div class="absolute inset-0 bg-cover bg-center" style="background-image: url('/blog-placeholder-4.jpg');"></div>
							<div class="absolute inset-0 bg-gradient-to-r from-black/30 to-transparent"></div>
						</div>
					</div>
				</div>
			</div>
		</section>

		<!-- Stats Section -->
		<section class="py-16 max-w-6xl mx-auto px-4">
			<div class="grid grid-cols-2 md:grid-cols-4 gap-8 text-center">
				<div class="p-6">
					<p class="text-4xl md:text-5xl font-bold text-accent mb-2">50+</p>
					<p class="text-gray-600">Restaurantes Reseñados</p>
				</div>
				<div class="p-6">
					<p class="text-4xl md:text-5xl font-bold text-accent mb-2">120+</p>
					<p class="text-gray-600">Recetas Compartidas</p>
				</div>
				<div class="p-6">
					<p class="text-4xl md:text-5xl font-bold text-accent mb-2">15k+</p>
					<p class="text-gray-600">Lectores Mensuales</p>
				</div>
				<div class="p-6">
					<p class="text-4xl md:text-5xl font-bold text-accent mb-2">4.9</p>
					<p class="text-gray-600">Valoración Promedio</p>
				</div>
			</div>
		</section>
	</main>
	<Footer />
</RestaurantLayout>